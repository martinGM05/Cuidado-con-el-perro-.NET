@model IEnumerable<E_Commerce_CuidadoConElPerro.Models.Proovedor>
@{
    ViewData["Title"] = "Proovedores";
    ViewData["Name"] = @ViewBag.Nombre;
}


<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12">
            <h1 class="page-header">
                Tabla de proovedores
            </h1>
            <span id="Eliminar" class="d-none">@TempData["Eliminado"]</span>
            <span id="Actualizar" class="d-none">@TempData["Actualizar"]</span>
            <p>
                En este apartado podremos ver todos los <b>proovedores</b> de la tienda.
            </p>
            <div class="align-items-sm-center">
                <table id="example" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th style="width:160px">Proovedor</th>
                            <th style="width:160px">Telefono</th>
                            <th style="width:220px">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.NombreProovedor</td>
                                <td>@item.Telefono</td>
                                <td>
                                    <a asp-action="ActualizarProovedor" asp-route-id="@item.IdProovedor" class="btn btn-warning"><i class="fas fa-sync-alt"></i></a>
                                    <a asp-action="EliminarProovedor" asp-route-id="@item.IdProovedor" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


@section Scripts
{


    <script>
        $(document).ready(function () {
            var message = $('#Actualizar').text();
            if (message !== '') {
                toastr.info(message, "Proovedor actualizado", {
                    "closeButton": true,
                    "progressBar": true,
                    "positionClass": "toast-bottom-right",
                    "preventDuplicates": true,
                });
            }
        });
    </script>

    <script>
        $(document).ready(function () {
            var message = $('#Eliminar').text();
            if (message !== '') {
                toastr.error(message, "Proovedor eliminado", {
                    "closeButton": true,
                    "progressBar": true,
                    "positionClass": "toast-bottom-right",
                    "preventDuplicates": true,
                });
            }
        });
    </script>

    <script>
        $(document).ready(function () {
            $('#example').DataTable({
                language: {
                    processing: "En proceso",
                    search: "Buscar",
                    lengthMenu: "Agrupar de _MENU_ ítems",
                    info: "Mostrando del ítem  _START_ al _END_ de un total de _TOTAL_ ítems",
                    infoEmpty: "No existen datos",
                    infoFiltered: "(Filtrado de _MAX_ elementos en total)",
                    infoPostFix: "",
                    loadingRecords: "Cargando...",
                    zeroRecords: "No se encontraron datos con tu busqueda",
                    emptyTable: "No hay datos disponibles en la tabla",
                    paginate: {
                        first: "Primero",
                        previous: "Anterior",
                        next: "Siguiente",
                        last: "Ultimo"
                    },
                    aria: {
                        sortAscending: ": Ascendente",
                        sortDescending: ": Descendente"
                    }
                },
                scrollY: 400,
                lengthMenu: [[10, 25, -1], [10, 25, "All"]],
            });
        });
    </script>
}